{{ form_start(form) }}
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-4">{{ form_row(form.title) }}</div>
        <div class="col-md-4">{{ form_row(form.surface) }}</div>
        <div class="col-md-4">{{ form_row(form.price) }}</div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="row flex">
        {% for picture in property.pictures %}
          <div class="col" style="width: 150px; flex: none; margin: 5px;">
            <img src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumb') }}" alt="Images du bien {{ property.title }}" width="150">
            <a href="{{ path('admin_picture_delete', {'id': picture.id}) }}" 
               class="btn btn-danger my-2" 
               data-delete 
               data-token="{{ csrf_token('delete' ~ picture.id) }}"
               >
                <i class="fas fa-trash mr-2"></i>Supprimer
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">{{ form_row(form.rooms) }}</div>
    <div class="col-md-2">{{ form_row(form.bedrooms) }}</div>
    <div class="col-md-2">{{ form_row(form.heat) }}</div>
    <div class="col-md-2">{{ form_row(form.floor) }}</div>
  </div>
  <div class="row">
    <div class="col-md-2">{{ form_row(form.pictureFiles) }}</div>
    <div class="col-md-3">{{ form_row(form.address) }}</div>
    <div class="col-md-2">{{ form_row(form.city) }}</div>
    <div class="col-md-1">{{ form_row(form.postal_code) }}</div>
    <div class="col-md-2">{{ form_row(form.sold) }}</div>
  </div>
  {{ form_rest(form) }}
  <button type="submit" class="btn btn-success">{{ button|raw }}</button>
{{ form_end(form) }}